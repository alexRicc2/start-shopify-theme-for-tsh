{%- style -%}
  
{%- endstyle -%}

<div >
        <h1>page handle: {{ request.path | split: '/' | last }}</h1>
      {% assign article_to_display =  request.path | split: '/' | last %}
  {% for article in blog.articles %}
      {% assign current_article = article.handle | split: '/' | last %}
  {% if current_article == article_to_display %}
      {% assign content_length = article.content | size %}
      {% assign half_length = content_length | divided_by: 2 %}
        <h1>{{ article.title }} {{ article.slug }} - {{ page.url }}</h1>
      {% comment %} <div>{{ article.content | slice: 0, half_length }}</div>
        <div>
          <div class="ml-embedded" data-form="wicNzF"></div>
          </div>
      <div>{{ article.content | slice: half_length, content_length }}</div> {% endcomment %}
      <div id="post-content">
        {{article.content}}
      </div>
    {% endif %}
{% endfor %}
    <div class="ml-embedded" data-form="wicNzF"></div>
    
</div>
